<source>
  type forward
  port 24224
</source>

<match mascarpone.**>
  type secure_forward
  shared_key    <%= node.default['setup-fluentd']['client']['shared_key'] %>
  self_hostname <%= node.default['setup-fluentd']['client']['self_hostname'] %>

  <server>
    host     <%= node.default['setup-fluentd']['server']['ip_addr'] %>
  </server>
</match>
