<source>
  type secure_forward
  shared_key         <%= node.default['setup-fluentd']['client']['shared_key'] %>
  self_hostname      <%= node.default['setup-fluentd']['client']['self_hostname'] %>
  cert_auto_generate <%= node.default['setup-fluentd']['client']['cert_auto_generate'] %>
authentication       <%= node.default['setup-fluentd']['client']['authentication'] %>

  <% for name, password in node.default['setup-fluentd']['client']['users'] %>
    <user>
      username <%= name.to_s %>
      password <%= password.to_s %>
    </user>
  <% end %>

</source>
